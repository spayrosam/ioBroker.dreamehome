{
  "name": "iobroker.dreamehome",
  "version": "0.1.0",
  "description": "Adapter for dreame home devices",
  "author": {
    "name": "Spayrosam",
    "email": "spayrosam@gmail.com"
  },
  "homepage": "https://github.com/Spayrosam/ioBroker.dreamehome",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "dreame",
    "dreamehome",
	  "vacuum"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Spayrosam/ioBroker.dreamehome.git"
  },
  "engines": {
    "node": ">= 18"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.2.3",
    "axios": "^1.8.4",
    "json2iob": "^2.6.12",
    "mqtt": "^5.10.1"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.2",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@alcalzone/release-script-plugin-manual-review": "^3.7.0",
    "@iobroker/adapter-dev": "^1.3.0",
    "@iobroker/eslint-config": "^2.0.1",
    "@iobroker/testing": "^5.0.3",
    "@tsconfig/node20": "^20.1.4",
    "@types/chai": "^4.3.14",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.13.7",
    "chai": "^4.5.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^11.0.1",
    "sinon": "^19.0.4",
    "sinon-chai": "^3.7.0",
    "typescript": "~5.8.2",
    "rimraf": "^3.0.2"
  },
  "main": "main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "admin/build",
    "build",
    "www/",
    "io-package.json",
    "LICENSE",
    "admin/**/style.css",
    "admin/build/index.js.map"
  ],
  "scripts": {
    "prebuild": "npm run lint:fix && rimraf admin/build",
    "build": "build-adapter all",
    "watch": "build-adapter react --watch",
    "prebuild:react": "rimraf admin/build",
    "build:react": "build-adapter react",
    "watch:react": "build-adapter react --watch",
    "test:js": "mocha --config test/mocharc.custom.json \"{!(node_modules|test)/**/*.test.js,*.test.js,test/**/test!(PackageFiles|Startup).js}\"",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:js && npm run test:package",
    "check": "tsc --noEmit -p tsconfig.check.json",
    "lint": "eslint -c eslint.config.mjs . && eslint -c admin/eslint.config.mjs admin/src/",
    "lint:fix": "eslint -c eslint.config.mjs . --fix && eslint -c admin/eslint.config.mjs admin/src/ --fix",
    "lint:backend": "eslint -c eslint.config.mjs .",
    "lint:frontend": "eslint -c admin/eslint.config.mjs admin/src/",
    "translate": "translate-adapter",
    "release": "release-script",
    "checker": "node skript.mjs",
    "dev": " dev-server run",
    "reset": "git reset $(git merge-base main $(git rev-parse --abbrev-ref HEAD))",
    "force": "git push --force-with-lease"
  },
  "bugs": {
    "url": "https://github.com/Spayrosam/ioBroker.dreamehome/issues"
  },
  "readmeFilename": "README.md"
}
