{
  "i18n": false,
  "items": {
    "credentials": {
      "type": "panel",
      "label": {
        "en": "Login Credentials",
        "de": "Anmeldedaten"
      },
      "items": {
        "username": {
          "type": "text",
          "label": {
            "en": "App Email",
            "de": "App E-Mail"
          },
          "newLine": true,
          "sm": 12,
          "md": 6
        },
        "password": {
          "type": "password",
          "label": {
            "en": "App Password",
            "de": "App-Passwort"
          },
          "newLine": true,
          "sm": 12,
          "md": 6
        }
      }
    },
    "deviceSelection": {
      "type": "panel",
      "label": {
        "en": "Device Selection",
        "de": "Geräteauswahl"
      },
      "items": {
        "selectedDeviceIndex": {
          "type": "number",
          "label": {
            "en": "Preferred device index (0=first, 1=second etc.)",
            "de": "Bevorzugter Geräteindex (0=erstes, 1=zweites usw.)"
          },
          "default": 0,
          "min": 0,
          "max": 9,
          "sm": 12,
          "md": 6,
          "hint": {
            "en": "Will automatically fallback to first device if selected device fails",
            "de": "Fällt automatisch auf erstes Gerät zurück falls Auswahl fehlschlägt"
          }
        },
        "deviceListautoFallback": {
          "type": "checkbox",
          "label": {
            "en": "Auto fallback to first device",
            "de": "Automatisch auf erstes Gerät zurückfallen"
          },
          "default": true,
          "sm": 12,
          "md": 6
        }
      }
    },
    "polling": {
      "type": "panel",
      "label": {
        "en": "Polling Settings",
        "de": "Abfrage-Einstellungen"
      },
      "items": {
        "interval": {
          "type": "number",
          "label": {
            "en": "Update interval (minutes)",
            "de": "Update-Intervall (Minuten)"
          },
          "min": 1,
          "newLine": true,
          "sm": 12,
          "md": 6
        }
      }
    },
    "monitoring": {
      "type": "panel",
      "label": {
        "en": "Resource Monitoring",
        "de": "Ressourcen-Überwachung"
      },
      "items": {
        "heapLimitMb": {
          "type": "number",
          "label": {
            "en": "Heap memory warning threshold (MB)",
            "de": "Heap-Speicher Warnschwelle (MB)"
          },
          "default": 100,
          "min": 10,
          "newLine": true,
          "sm": 12,
          "md": 6
        },
        "heapLimitMB": {
          "type": "number",
          "label": {
            "en": "Critical heap limit (MB)",
            "de": "Kritische Heap-Grenze (MB)"
          },
          "default": 150,
          "min": 50,
          "sm": 12,
          "md": 6
        },
        "intervalMs": {
          "type": "number",
          "label": {
            "en": "Monitoring interval (sec)",
            "de": "Überwachungsintervall (Sek.)"
          },
          "default": 60,
          "min": 5,
          "sm": 12,
          "md": 6
        },
        "eventLoopLagLimitMs": {
          "type": "number",
          "label": {
            "en": "Event loop lag threshold (ms)",
            "de": "Event-Loop-Verzögerungsschwelle (ms)"
          },
          "default": 100,
          "min": 10,
          "sm": 12,
          "md": 6
        },
        "gcEnabled": {
          "type": "checkbox",
          "label": {
            "en": "Enable garbage collection",
            "de": "Garbage Collection aktivieren"
          },
          "default": true,
          "sm": 12
        }
      }
    },
    "memoryCleaner": {
      "type": "panel",
      "label": {
        "en": "Memory Cleaner",
        "de": "Speicherbereinigung"
      },
      "items": {
        "memoryCleanerEnabled": {
          "type": "checkbox",
          "label": {
            "en": "Enable automatic cleanup",
            "de": "Automatische Bereinigung aktivieren"
          },
          "default": true,
          "newLine": true,
          "sm": 12
        },
        "memoryCleanerThresholdMB": {
          "type": "number",
          "label": {
            "en": "Cleanup threshold (MB)",
            "de": "Bereinigungsschwelle (MB)"
          },
          "default": 300,
          "min": 50,
          "sm": 12,
          "md": 6
        },
        "memoryCleanerIntervalSec": {
          "type": "number",
          "label": {
            "en": "Check interval (sec)",
            "de": "Prüfintervall (Sek.)"
          },
          "default": 30,
          "min": 5,
          "sm": 12,
          "md": 6
        },
        "memoryCleanerPriority": {
          "type": "select",
          "label": {
            "en": "Cleanup priority",
            "de": "Bereinigungspriorität"
          },
          "options": [
            { "value": "low", "label": { "en": "Low", "de": "Niedrig" } },
            { "value": "medium", "label": { "en": "Medium", "de": "Mittel" } },
            { "value": "high", "label": { "en": "High", "de": "Hoch" } }
          ],
          "default": "medium",
          "sm": 12
        }
      }
    }
  }
}