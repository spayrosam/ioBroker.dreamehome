{
  "i18n": false,
  "items": {
    "credentials": {
      "type": "panel",
      "label": {
        "en": "Login Credentials",
        "de": "Anmeldedaten"
      },
      "items": {
        "username": {
          "type": "text",
          "label": {
            "en": "App Email",
            "de": "App E-Mail"
          },
          "newLine": true,
          "sm": 12,
          "md": 6,
          "lg": 6,
          "xl": 4,
          "xs": 12
        },
        "password": {
          "type": "password",
          "label": {
            "en": "App Password",
            "de": "App-Passwort"
          },
          "newLine": true,
          "sm": 12,
          "md": 6,
          "lg": 6,
          "xl": 4,
          "xs": 12
        }
      }
    },
    "deviceSelection": {
      "type": "panel",
      "label": {
        "en": "Device Selection",
        "de": "Geräteauswahl"
      },
      "items": {
        "selectedDeviceIndex": {
          "type": "number",
          "label": {
            "en": "Preferred device index (0=first, 1=second etc.)",
            "de": "Bevorzugter Geräteindex (0=erstes, 1=zweites usw.)"
          },
          "default": 0,
          "min": 0,
          "max": 9,
          "sm": 12,
          "md": 6,
          "lg": 4,
          "xl": 3,
          "xs": 12,
          "hint": {
            "en": "Will automatically fallback to first device if selected device fails",
            "de": "Fällt automatisch auf erstes Gerät zurück falls Auswahl fehlschlägt"
          }
        },
        "deviceListautoFallback": {
          "type": "checkbox",
          "label": {
            "en": "Auto fallback to first device",
            "de": "Automatisch auf erstes Gerät zurückfallen"
          },
          "default": true,
          "sm": 12,
          "md": 6,
          "lg": 4,
          "xl": 3,
          "xs": 12
        }
      }
    },
    "polling": {
      "type": "panel",
      "label": {
        "en": "Polling Settings",
        "de": "Abfrage-Einstellungen"
      },
      "items": {
        "interval": {
          "type": "number",
          "label": {
            "en": "Update interval (minutes)",
            "de": "Update-Intervall (Minuten)"
          },
          "min": 1,
          "max": 1440,
          "newLine": true,
          "sm": 12,
          "md": 6,
          "lg": 4,
          "xl": 3,
          "xs": 12
        }
      }
    },
    "monitoring": {
      "type": "panel",
      "label": {
        "en": "Resource Monitoring",
        "de": "Ressourcen-Überwachung"
      },
      "items": {
        "heapLimitMB": {
          "type": "number",
          "label": {
            "en": "Heap memory warning threshold (MB)",
            "de": "Heap-Speicher Warnschwelle (MB)"
          },
          "default": 100,
          "min": 10,
          "max": 4096,
          "newLine": true,
          "sm": 12,
          "md": 6,
          "lg": 4,
          "xl": 3,
          "xs": 12
        },
        "criticalHeapLimitMB": {
          "type": "number",
          "label": {
            "en": "Critical heap limit (MB)",
            "de": "Kritische Heap-Grenze (MB)"
          },
          "default": 150,
          "min": 50,
          "max": 8192,
          "sm": 12,
          "md": 6,
          "lg": 4,
          "xl": 3,
          "xs": 12
        },
        "monitoringIntervalSec": {
          "type": "number",
          "label": {
            "en": "Monitoring interval (seconds)",
            "de": "Überwachungsintervall (Sekunden)"
          },
          "default": 60,
          "min": 5,
          "max": 3600,
          "sm": 12,
          "md": 6,
          "lg": 4,
          "xl": 3,
          "xs": 12
        },
        "eventLoopLagLimitMs": {
          "type": "number",
          "label": {
            "en": "Event loop lag threshold (ms)",
            "de": "Event-Loop-Verzögerungsschwelle (ms)"
          },
          "default": 100,
          "min": 10,
          "max": 5000,
          "sm": 12,
          "md": 6,
          "lg": 4,
          "xl": 3,
          "xs": 12
        },
        "gcEnabled": {
          "type": "checkbox",
          "label": {
            "en": "Enable garbage collection",
            "de": "Garbage Collection aktivieren"
          },
          "default": true,
          "sm": 12,
          "md": 6,
          "lg": 4,
          "xl": 3,
          "xs": 12
        }
      }
    },
    "memoryCleaner": {
      "type": "panel",
      "label": {
        "en": "Memory Cleaner",
        "de": "Speicherbereinigung"
      },
      "items": {
        "memoryCleanerEnabled": {
          "type": "checkbox",
          "label": {
            "en": "Enable automatic cleanup",
            "de": "Automatische Bereinigung aktivieren"
          },
          "default": true,
          "newLine": true,
          "sm": 12,
          "md": 6,
          "lg": 4,
          "xl": 3,
          "xs": 12
        },
        "memoryCleanerThresholdMB": {
          "type": "number",
          "label": {
            "en": "Cleanup threshold (MB)",
            "de": "Bereinigungsschwelle (MB)"
          },
          "default": 300,
          "min": 50,
          "max": 16384,
          "sm": 12,
          "md": 6,
          "lg": 4,
          "xl": 3,
          "xs": 12
        },
        "memoryCleanerIntervalSec": {
          "type": "number",
          "label": {
            "en": "Check interval (seconds)",
            "de": "Prüfintervall (Sekunden)"
          },
          "default": 30,
          "min": 5,
          "max": 3600,
          "sm": 12,
          "md": 6,
          "lg": 4,
          "xl": 3,
          "xs": 12
        },
        "memoryCleanerPriority": {
          "type": "select",
          "label": {
            "en": "Cleanup priority",
            "de": "Bereinigungspriorität"
          },
          "options": [
            {
              "value": "low",
              "label": {
                "en": "Low",
                "de": "Niedrig"
              }
            },
            {
              "value": "medium",
              "label": {
                "en": "Medium",
                "de": "Mittel"
              }
            },
            {
              "value": "high",
              "label": {
                "en": "High",
                "de": "Hoch"
              }
            }
          ],
          "default": "medium",
          "sm": 12,
          "md": 6,
          "lg": 4,
          "xl": 3,
          "xs": 12
        },
        "restartCooldownMinutes": {
          "type": "number",
          "label": {
            "en": "Restart cooldown (minutes)",
            "de": "Neustart-Abkühlzeit (Minuten)"
          },
          "default": 60,
          "min": 1,
          "max": 1440,
          "sm": 12,
          "md": 6,
          "lg": 4,
          "xl": 3,
          "xs": 12
        }
      }
    }
  }
}