    },
    "platform": "Javascript/Node.js",
    "main": "main.js",
    "icon": "dreamehome.png",
    "enabled": true,
    "extIcon": "https://raw.githubusercontent.com/spayrosam/ioBroker.dreamehome/main/admin/dreamehome.png",
    "readme": "https://github.com/Spayrosam/ioBroker.dreamehome/blob/main/README.md",
    "loglevel": "info",
    "tier": 3,
    "mode": "daemon",
    "type": "household",
    "compact": true,
    "connectionType": "cloud",
    "dataSource": "poll",
    "adminUI": {
      "config": "json"
    },
    "dependencies": [
      {
        "js-controller": ">=5.0.19"
      }
    ],
    "globalDependencies": [
      {
        "admin": ">=7.4.10"
      }
    ]
  },
  "encryptedNative": ["password"],
  "protectedNative": ["password"],
  "native": {
    "username": "",
    "password": "",
    "interval": 30,
    "heapLimitMb": 100,
    "eventLoopLagLimitMs": 100,
    "gcEnabled": true,
    "memoryCleanerEnabled": true,
    "memoryCleanerThresholdMB": 300,
    "memoryCleanerPriority": "medium",
	"restartCooldownMinutes": 60,
	"selectedDeviceIndex": 0
  },
  "instanceObjects": [
    {
      "_id": "info",
      "type": "channel",
      "common": {
        "name": "Information"
      }
    },
    {
      "_id": "info.connection",
      "type": "state",
      "common": {
        "role": "indicator.connected",
        "name": "Device or service connected",
        "type": "boolean",
        "read": true,
        "write": false,
        "def": false
      }
    },
    {
      "_id": "resources",
      "type": "channel",
      "common": {
        "name": "Resource Monitoring"
      }
    },
    {
      "_id": "resources.log",
      "type": "state",
      "common": {
        "type": "string",
        "role": "text",
        "read": true,
        "write": false,
        "desc": "Last resource warnings"
      }
    },
    {
      "_id": "resources.memory",
      "type": "channel",
      "common": {
        "name": "Memory Usage"
      }
    },
    {
      "_id": "resources.memory.heapUsedMB",
      "type": "state",
      "common": {
        "name": "Heap Used (MB)",
        "type": "number",
        "role": "value.memory",
        "unit": "MB",
        "read": true,
        "write": false
      }
    },
    {
      "_id": "resources.memoryCleaner",
      "type": "channel",
      "common": {
        "name": "Memory Cleaner"
      }
    },
    {
      "_id": "resources.memoryCleaner.lastFreedMB",
      "type": "state",
      "common": {
        "name": "Last Freed Memory (MB)",
        "type": "number",
        "role": "value.memory",
        "unit": "MB",
        "read": true,
        "write": false
      }
    }
  ]

}
