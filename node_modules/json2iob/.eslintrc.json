{
    "root": true,
    "env": {
        "node": true,
        "mocha": true,
        "es2022": true
    },
    "extends": ["eslint:recommended"],
    "plugins": [],
    "rules": {
        "indent": [
            "error",
            2,
            {
                "SwitchCase": 1
            }
        ],
        "no-console": "off",
        "no-unused-vars": [
            "error",
            {
                "ignoreRestSiblings": true,
                "argsIgnorePattern": "^_"
            }
        ],
        "no-var": "error",
        "no-trailing-spaces": "error",
        "prefer-const": "error",
        "quotes": [
            "error",
            "double",
            {
                "avoidEscape": true,
                "allowTemplateLiterals": true
            }
        ],
        "semi": ["error", "always"]
    },
    "parserOptions": {
        "ecmaVersion": 2022
    }
}
